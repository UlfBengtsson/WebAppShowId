@model IEnumerable<WebAppShowId.Models.Hotel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Stars)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rooms)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr id="@("hotelId" + item.Id)">
        @Html.Partial("_HotelListItem",item)
    </tr>
}

</table>
